<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".ViewRecipeActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgMonAn"
                android:layout_width="match_parent"
                android:layout_height="144dp"
                android:layout_marginStart="4dp"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="4dp"
                tools:srcCompat="@tools:sample/avatars" />

            <TextView
                android:id="@+id/txtTenMon"
                style="@style/Widget.AppCompat.TextView"
                android:layout_width="match_parent"
                android:layout_height="59dp"
                android:gravity="center"
                android:text="TextView"
                android:textSize="24dp"
                android:textColor="@color/black"
                android:textStyle="bold" />
            <CheckBox
                android:id="@+id/checkFavorite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@null"
                android:background="@drawable/ic_like"
                android:checked="false"
                android:layout_gravity="center"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <TextView
                android:id="@+id/txtThanhPhan"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:lines="@integer/material_motion_duration_short_2"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="Chuẩn bị"
                android:textSize="18dp"
                android:textColor="@color/black"/>

            <ListView
                android:id="@+id/lstChuanBiShow"
                android:layout_width="match_parent"
                android:layout_height="183dp"
                android:textSize="18dp"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/textView12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="Các bước"
                android:textSize="18dp"
                android:textColor="@color/black" />
            <ListView
                android:id="@+id/lstStep"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:scrollbars="none"
                android:textSize="18dp"
                android:textColor="@color/black"/>


        </LinearLayout>
    </ScrollView>

</LinearLayout>