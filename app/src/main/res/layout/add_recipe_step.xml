<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".LoginActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:text="Thêm bước"
        android:textAlignment="center"
        android:textColor="#0B0A0A"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:text="Ảnh bước làm"
        android:textColor="#070707"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/imgBuocLam"
        android:layout_width="match_parent"
        android:layout_height="242dp"
        tools:srcCompat="@tools:sample/backgrounds/scenic" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">


        <Button
            android:id="@+id/btnGetImgStep1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:text="Chụp" />

        <Button
            android:id="@+id/btnGetImgStep2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="50dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:text="Thư viện" />
    </LinearLayout>

    <EditText
        android:id="@+id/txtBuocThem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Miêu tả bước làm"
        android:inputType="textMultiLine"
        android:lines="20"
        android:maxLines="20"
        android:minLines="1"
        android:scrollbars="vertical"
        android:textColor="#0B0A0A" />

    <Button
        android:id="@+id/btnThemBuoc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thêm" />


</LinearLayout>